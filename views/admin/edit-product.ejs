<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
   <% let action, title, imageUrl, price, description
    if(editing) {
        action = '/admin/edit-product'
        title = product.title
        imageUrl = product.imageUrl
        price = product.price
        description = product.description
        buttonAction = 'Edit Product'
    } else {
        action = '/admin/add-product'
        title = ''
        imageUrl = ''
        price = ''
        description = ''
        buttonAction = 'Add Product'
    }
   %>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="<%= action %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= title ? title : oldInput.value('title') %>" class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= imageUrl ? imageUrl : oldInput.value('imageUrl') %>" class="<%= validationErrors.find(e => e.path === 'imageUrl') ? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= price ? price : oldInput.value('price') %>" class="<%= validationErrors.find(e => e.path === 'price') ? 'invalid' : '' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" class="<%= validationErrors.find(e => e.path === 'description') ? 'invalid' : '' %>"><%= description ? description : oldInput.value('description') %></textarea>
            </div>
            <button class="btn" type="submit"><%= buttonAction %></button>
            <% if(editing) { %>
            <input type="hidden" name="productId" value="<%= product._id %>">
            <% } %>
        </form>
    </main>
<%- include('../includes/end.ejs') %>