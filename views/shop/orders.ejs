<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
        <% if(orders.length <= 0) { %>
            <h1>Nothing there!</h1>
        <% } else { %>
            <h1>Orders</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Products</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order._id %></td>
                            <td>
                                <% order.products.forEach(item => { %>
                                    <div><%= item.product.title %> - <%= item.quantity %></div>
                                <% }) %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
        </main>
        <%- include('../includes/end.ejs') %>